<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/widget_setting_v"
        android:layout_width="match_parent"
        android:layout_height="1.4dp"
        android:background="@color/sub_color"
        app:layout_constraintBottom_toBottomOf="@+id/widget_top_title_tv" />

    <ImageView
        android:id="@+id/widget_back_btn_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="27dp"
        android:src="@drawable/ic_back_tag"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/widget_top_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:fontFamily="@font/notosans_regular"
        android:text="@string/widget_setting"
        android:textColor="@color/black"
        android:textFontWeight="700"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/widget_back_btn_iv"
        app:layout_constraintLeft_toRightOf="@id/widget_back_btn_iv"
        app:layout_constraintTop_toTopOf="@id/widget_back_btn_iv" />

</androidx.constraintlayout.widget.ConstraintLayout>