<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/home_food_stroke"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="18dp"
    >

    <TextView
        android:id="@+id/today_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2022년 10월 4일 화요일"
        android:textSize="14sp"
        android:fontFamily="@font/notosans_regular"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/today_tv"
        android:text="중식"
        android:textSize="14sp"
        android:textColor="@color/main_color"
        android:fontFamily="@font/notosans_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="23dp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/today_food_1"
        android:text="순두부 찌개 "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosans_regular"
        android:textAlignment="center"
        android:paddingHorizontal="10dp"
        android:breakStrategy="high_quality"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/today_day"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <ImageView
        android:id="@+id/today_line_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_line_4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/today_food_1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/today_good_cl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/today_line_iv"
        app:layout_constraintTop_toTopOf="@id/today_line_iv"
        app:layout_constraintBottom_toBottomOf="@id/today_line_iv"
        app:layout_constraintLeft_toLeftOf="parent"
        >

        <TextView
            android:id="@+id/today_afternoon_good_tv"
            android:text="맛있어요 "
            android:textSize="12sp"
            android:fontFamily="@font/notosans_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
            android:id="@+id/today_afternoon_good_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_good"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/today_afternoon_good_tv"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="12dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/today_hate_cl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/today_line_iv"
        app:layout_constraintTop_toTopOf="@id/today_line_iv"
        app:layout_constraintBottom_toBottomOf="@id/today_line_iv"
        app:layout_constraintRight_toRightOf="parent"
        >

        <TextView
            android:id="@+id/today_afternoon_hate_tv"
            android:text="맛없어요 "
            android:textSize="12sp"
            android:fontFamily="@font/notosans_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
            android:id="@+id/today_afternoon_hate_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_hate"
            app:layout_constraintLeft_toRightOf="@id/today_afternoon_hate_tv"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="12dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>