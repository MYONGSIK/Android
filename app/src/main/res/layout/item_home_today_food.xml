<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="16dp">

    <View
        android:id="@+id/home_lunch_a_v"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/home_today_food_stroke"
        app:layout_constraintBottom_toBottomOf="@+id/today_food_1"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/today_day_lunch_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/home_food_stroke_category"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/week_food_lunch_a_v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="11dp"
            android:paddingVertical="4dp"
            android:text="@string/lunch_a_text"
            android:textColor="@color/sub_color"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/today_food_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:breakStrategy="high_quality"
        android:fontFamily="@font/notosans_regular"
        android:maxLines="3"
        android:paddingHorizontal="32dp"
        android:paddingBottom="10dp"
        android:text="@string/food_list"
        android:textAlignment="center"
        android:textColor="#717171"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/today_day_lunch_a" />

    <View
        android:id="@+id/home_lunch_b_v"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/home_today_food_stroke"
        app:layout_constraintBottom_toBottomOf="@+id/today_food_lunch_b"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_lunch_a_v" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/today_day_lunch_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/home_food_stroke_category"
        app:layout_constrainedWidth="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/home_lunch_b_v">

        <TextView
            android:id="@+id/week_food_lunch_b_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="11dp"
            android:paddingVertical="4dp"
            android:text="@string/lunch_b_text"
            android:textColor="@color/sub_color"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/today_food_lunch_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:breakStrategy="high_quality"
        android:fontFamily="@font/notosans_regular"
        android:inputType="textMultiLine"
        android:maxLines="3"
        android:paddingHorizontal="32dp"
        android:paddingBottom="10dp"
        android:text="@string/food_list"
        android:textAlignment="center"
        android:textColor="#717171"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/today_day_lunch_b" />

    <View
        android:id="@+id/home_afternoon_v"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/home_today_food_stroke"
        app:layout_constraintBottom_toBottomOf="@+id/today_food_afternoon"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_lunch_b_v" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/today_day_afternoon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/home_food_stroke_category"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/home_afternoon_v">

        <TextView
            android:id="@+id/week_food_afternoon_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosans_regular"
            android:includeFontPadding="false"
            android:paddingHorizontal="15dp"
            android:paddingVertical="4dp"
            android:text="@string/dinner_text"
            android:textColor="@color/sub_color"
            android:textFontWeight="500"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/today_food_afternoon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:breakStrategy="high_quality"
        android:fontFamily="@font/notosans_regular"
        android:maxLines="3"
        android:paddingHorizontal="32dp"
        android:paddingBottom="10dp"
        android:text="@string/food_list"
        android:textAlignment="center"
        android:textColor="#717171"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/today_day_afternoon" />

</androidx.constraintlayout.widget.ConstraintLayout>


