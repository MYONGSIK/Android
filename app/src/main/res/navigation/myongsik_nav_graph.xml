<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myongsik_nav_graph"
    app:startDestination="@id/fragment_splash">


    <fragment
        android:id="@+id/fragment_week_food"
        android:name="com.myongsik.myongsikandroid.ui.view.WeekFoodFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_week_food"/>
    <fragment
        android:id="@+id/fragment_splash"
        android:name="com.myongsik.myongsikandroid.ui.view.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_fragment_splash_to_fragment_home"
            app:destination="@id/fragment_home"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popUpTo="@+id/fragment_splash"
            app:popUpToInclusive="true"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/fragment_home"
        android:name="com.myongsik.myongsikandroid.ui.view.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_fragment_home_to_fragment_week_food"
            app:destination="@id/fragment_week_food"
            app:enterAnim="@anim/nav_default_pop_enter_anim"
            app:exitAnim="@anim/nav_default_pop_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/fragment_home"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_fragment_home_to_weekFoodsFragment"
            app:destination="@id/weekFoodsFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/fragment_home" />
    </fragment>
    <fragment
        android:id="@+id/weekFoodsFragment"
        android:name="com.myongsik.myongsikandroid.ui.view.WeekFoodsFragment"
        android:label="WeekFoodsFragment"
        tools:layout="@layout/fragment_week_foods"/>
</navigation>